@page "/account"
@using Susurri.Client.Models
@using System.Text.Json
@using System.Text
@inject HttpClient Http

<h3>Account</h3>

<EditForm Model="@SignUp" OnValidSubmit="@HandleValidSubmit" Id="accountForm">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label for="username">Username</label>
        <InputText id="username" @bind-Value="SignUp.Username" class="form-control" />
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <InputText id="password" @bind-Value="SignUp.Password" type="password" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Sign Up</button>
</EditForm>

@code {
    SignUpViewModel SignUp { get; set; } = new SignUpViewModel();

    private async Task HandleValidSubmit()
    {
        // Convert your model to a JSON string
        var signUpJson = JsonSerializer.Serialize(SignUp);

        // Send it as StringContent, specify media type as application/json
        var signUpContent = new StringContent(signUpJson, Encoding.UTF8, "application/json");
        
        // Send a POST request to your API endpoint; replace "https://yourapi.com/signup" with your actual endpoint
        var response = await Http.PostAsync("https://localhost:7200/account", signUpContent);

        if (response.IsSuccessStatusCode)
        {
            // Handle success
        }
        else
        {
            // Handle failure
            // You can read the response using await response.Content.ReadAsStringAsync() to get more details
        }
    }
}